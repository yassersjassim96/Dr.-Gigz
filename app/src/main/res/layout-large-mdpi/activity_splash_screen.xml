<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".SplashScreenActivity"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageSplash"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        app:srcCompat="@mipmap/techgigz_logo_splash_screen"
        android:contentDescription="@string/white_logo" />

    <TextView
        android:layout_marginTop="-30dp"
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageSplash"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خدمة من منصة تيك كيكز للأخبار"
        android:textSize="23sp"
        android:textColor="#fff"
        android:layout_below="@+id/appName"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textAlignment="center"
        android:id="@+id/who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="جميع المعلومات والأرقام الواردة في هذا التطبيق موثقة من منظمة الصحة العالمية"
        android:textColor="#fff"
        android:layout_below="@+id/tech"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>